<%= bootstrap_form_with(model: calendar, local: true) do |form| %>
    
  
    <div class="field">
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.text_field :event_description %>
    </div>
  
    <div class="field">
      <%= form.date_select :start_date %>
    </div>
  
    <div class="field">
      <%= form.date_select :end_date %>
    </div>
  
    
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>