
   <%= form_for @calendar, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <%= f.label :event_name, class:"text-secondary" %>
    <br>
    
    <%= f.text_field :event_name, class: "form-control" %>
  
    <br>
    <%= f.label :event_description, class:"text-secondary" %>
    <br>
    <%= f.text_area :event_description,  rows: "4", class: "form-control" %>
    <% #= f.text_field :event_description, class: "form-control", :hatch, rows: "10" %>
    <br>
    <%= f.label :start_date, class:"text-secondary" %>
    <br>
    <%= f.date_field :start_date, class: 'form-control' %>
    <% #= date_select :calendar, :start_date, class: "form-control" %>
    <br>
    <%= f.label :end_date, class:"text-secondary" %>
    <br>
    <%= f.date_field :end_date, class: 'form-control' %>
    <% #= date_select :calendar, :end_date, class: "form-control" %>
      
    
    <br><br>
    <%= f.submit "Create", class: "btn btn-success" %>
    <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
  <% end %>
