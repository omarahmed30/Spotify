<%= form_for @calendar, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <%= f.label :event_name, class:"text-secondary" %><br>
    <%= f.text_field :event_name, class: "form-control", required: true %><br>

    <%= f.label :event_description, class:"text-secondary" %><br>
    <%= f.text_area :event_description,  rows: "4", class: "form-control", required: true %><br>

    <%= f.label :start_date, class:"text-secondary" %><br>
    <%= f.date_field :start_date,  class: 'form-control', required: true %><br>

    <%= f.label :end_date, class:"text-secondary" %><br>
    <%= f.date_field :end_date, class: 'form-control', required: true %><br><br>

    <%= f.submit "Submit", class: "btn btn-success" %>
    <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
<% end %>
